<?xml version="1.0" encoding="UTF-8"?>
<project name="lockrepo" default="all">
  
  
  <property file="lockrepo.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
    <exclude name="**/vssver.scc/**"/>
    <exclude name="**/vssver2.scc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.war"/>
    <include name="*.ear"/>
    <include name="*.apk"/>
    <include name="*.zip"/>
    <include name="*.swc"/>
    <include name="*.ane"/>
    <include name="*.egg"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  
  
  <!-- Project Libraries -->
  
  <path id="library.gradle:_com.jgoodies:jgoodies-common:1.4.0.classpath">
    <pathelement location="${basedir}/../../../.gradle/caches/modules-2/files-2.1/com.jgoodies/jgoodies-common/1.4.0/6f9364fafb8d8f467ddbab16dfcaadfecaea6bdd/jgoodies-common-1.4.0.jar"/>
  </path>
  
  <path id="library.gradle:_com.jgoodies:jgoodies-forms:1.6.0.classpath">
    <pathelement location="${basedir}/../../../.gradle/caches/modules-2/files-2.1/com.jgoodies/jgoodies-forms/1.6.0/a2a6ba2c9d9ae8ade3469f004d7ec02ba7d71f22/jgoodies-forms-1.6.0.jar"/>
  </path>
  
  <path id="library.gradle:_junit:junit:4.11.classpath">
    <pathelement location="${basedir}/../../../.gradle/caches/modules-2/files-2.1/junit/junit/4.11/4e031bb61df09069aeb2bffb4019e7a5034a4ee0/junit-4.11.jar"/>
  </path>
  
  <path id="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath">
    <pathelement location="${basedir}/../../../.gradle/caches/modules-2/files-2.1/org.hamcrest/hamcrest-core/1.3/42a25dc3219429f0e5d060061f71acb49bf010a0/hamcrest-core-1.3.jar"/>
  </path>
  
  
  <!-- Application Server Libraries -->
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module LockRepo -->
  
  <dirname property="module.lockrepo.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.lockrepo" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.lockrepo" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.lockrepo" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.lockrepo" value="-encoding UTF-8 -source 8 ${compiler.args}"/>
  
  <property name="lockrepo.output.dir" value="${module.lockrepo.basedir}/build/classes/main"/>
  <property name="lockrepo.testoutput.dir" value="${module.lockrepo.basedir}/build/classes/test"/>
  
  <path id="lockrepo.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="lockrepo.module.production.classpath">
    <path refid="${module.jdk.classpath.lockrepo}"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-forms:1.6.0.classpath"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-common:1.4.0.classpath"/>
    <pathelement location="${basedir}/lib/forms_rt.jar"/>
  </path>
  
  <path id="lockrepo.runtime.production.module.classpath">
    <pathelement location="${lockrepo.output.dir}"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-forms:1.6.0.classpath"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-common:1.4.0.classpath"/>
    <pathelement location="${basedir}/lib/forms_rt.jar"/>
  </path>
  
  <path id="lockrepo.module.classpath">
    <path refid="${module.jdk.classpath.lockrepo}"/>
    <pathelement location="${lockrepo.output.dir}"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-forms:1.6.0.classpath"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-common:1.4.0.classpath"/>
    <path refid="library.gradle:_junit:junit:4.11.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <pathelement location="${basedir}/lib/forms_rt.jar"/>
  </path>
  
  <path id="lockrepo.runtime.module.classpath">
    <pathelement location="${lockrepo.testoutput.dir}"/>
    <pathelement location="${lockrepo.output.dir}"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-forms:1.6.0.classpath"/>
    <path refid="library.gradle:_com.jgoodies:jgoodies-common:1.4.0.classpath"/>
    <path refid="library.gradle:_junit:junit:4.11.classpath"/>
    <path refid="library.gradle:_org.hamcrest:hamcrest-core:1.3.classpath"/>
    <pathelement location="${basedir}/lib/forms_rt.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.lockrepo">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.lockrepo">
    <patternset refid="excluded.from.module.lockrepo"/>
  </patternset>
  
  <path id="lockrepo.module.sourcepath">
    <dirset dir="${module.lockrepo.basedir}">
      <include name="src/main/java"/>
      <include name="src/main/resources"/>
    </dirset>
  </path>
  
  <path id="lockrepo.module.test.sourcepath">
    <dirset dir="${module.lockrepo.basedir}">
      <include name="src/test/java"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.lockrepo" depends="compile.module.lockrepo.production,compile.module.lockrepo.tests" description="Compile module LockRepo"/>
  
  <target name="compile.module.lockrepo.production" depends="register.custom.compilers" description="Compile module LockRepo; production classes">
    <mkdir dir="${lockrepo.output.dir}"/>
    <javac2 destdir="${lockrepo.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lockrepo}/javac">
      <compilerarg line="${compiler.args.lockrepo}"/>
      <bootclasspath refid="lockrepo.module.bootclasspath"/>
      <classpath refid="lockrepo.module.production.classpath"/>
      <src refid="lockrepo.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.lockrepo"/>
    </javac2>
    
    <copy todir="${lockrepo.output.dir}">
      <fileset dir="${module.lockrepo.basedir}/src/main/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
      <fileset dir="${module.lockrepo.basedir}/src/main/resources">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.lockrepo.tests" depends="register.custom.compilers,compile.module.lockrepo.production" description="compile module LockRepo; test classes" unless="skip.tests">
    <mkdir dir="${lockrepo.testoutput.dir}"/>
    <javac2 destdir="${lockrepo.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lockrepo}/javac">
      <compilerarg line="${compiler.args.lockrepo}"/>
      <bootclasspath refid="lockrepo.module.bootclasspath"/>
      <classpath refid="lockrepo.module.classpath"/>
      <src refid="lockrepo.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.lockrepo"/>
    </javac2>
    
    <copy todir="${lockrepo.testoutput.dir}">
      <fileset dir="${module.lockrepo.basedir}/src/test/java">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.lockrepo" description="cleanup module">
    <delete dir="${lockrepo.output.dir}"/>
    <delete dir="${lockrepo.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.lockrepo" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.lockrepo" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
  <target name="build-jar">
  <jar destfile="${basedir}/build/libs-ant/LockRepo-1.0.jar"
       basedir="${lockrepo.output.dir}">
    <manifest>
      <attribute name="Main-Class" value="dha.lockrepo.view.swing.MainEntry"/>
      <attribute name="Class-Path" value="${basedir}/lib/forms_rt.jar
      ${basedir}/../../../.gradle/caches/modules-2/files-2.1/com.jgoodies/jgoodies-common/1.4.0/6f9364fafb8d8f467ddbab16dfcaadfecaea6bdd/jgoodies-common-1.4.0.jar
      ${basedir}/../../../.gradle/caches/modules-2/files-2.1/com.jgoodies/jgoodies-forms/1.6.0/a2a6ba2c9d9ae8ade3469f004d7ec02ba7d71f22/jgoodies-forms-1.6.0.jar"/>
    </manifest>
  </jar>
  </target>
</project>